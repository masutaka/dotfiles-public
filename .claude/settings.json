{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "ENABLE_TOOL_SEARCH": true,
    "ENABLE_EXPERIMENTAL_MCP_CLI": false,
    "SHELL": "/bin/zsh"
  },
  "permissions": {
    "allow": [
      "Bash(bundle info:*)",
      "Bash(curl:*)",
      "Bash(find:*)",
      "Bash(gemini:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr view:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(rails routes:*)",
      "Bash(rg:*)",
      "Bash(wget:*)",
      "Read(.env.example)",
      "mcp__context7__get-library-docs",
      "mcp__context7__resolve-library-id",
      "mcp__nulab-backlog__get_issue",
      "mcp__nulab-backlog__get_issue_comments",
      "mcp__sentry__get_issue_details",
      "mcp__sentry__search_events"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(nc:*)",
      "Bash(rm -rf .git)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(sudo:*)",
      "Bash(wget:*)",
      "Read(.env)",
      "Read(.envrc)",
      "Write(.env*)"
    ]
  },
  "enableAllProjectMcpServers": false,
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754037400924
  }
}
