{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "SHELL": "/bin/zsh"
  },
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(find:*)",
      "Bash(gemini:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(rg:*)",
      "Bash(wget:*)",
      "Read(.env.example)",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Bash(curl * | bash)",
      "Bash(curl * | sh)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(nc:*)",
      "Bash(rm -rf .git)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(sudo:*)",
      "Bash(wget * | bash)",
      "Bash(wget * | sh)",
      "Read(.env)",
      "Read(.envrc)",
      "Write(.env*)"
    ]
  },
  "enableAllProjectMcpServers": false
}
